<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00BFFF"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <android.support.v7.widget.CardView
        android:id="@+id/card_1"

        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_width="155dp"
        android:layout_height="130dp">
    <ImageView
        android:id="@+id/glide_test"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="15dp"
android:layout_width="match_parent"
    android:layout_height="145dp"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:id="@+id/shibie1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"

        app:layout_widthPercent="48%"

        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="130dp">
            <ImageView

                android:layout_width="70dp"
                android:background="@drawable/shibie2"
                android:layout_height="60dp"
                android:layout_margin="5dp"

                />
            <TextView
                android:id="@+id/name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"

                android:text="识别"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="6dp"
                android:textSize="23sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        app:layout_widthPercent="48%"
android:layout_width="0dp"
        android:id="@+id/yanghu"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/yijianyi"
                android:layout_height="60dp"

                />
            <TextView
                android:id="@+id/name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"

                android:text="养护建议"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="6dp"
                android:textSize="23sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.percent.PercentRelativeLayout>




    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:id="@+id/yixue"
            app:layout_widthPercent="48%"

            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="130dp">
                <ImageView

                    android:layout_width="70dp"
                    android:background="@drawable/yixue"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"

                    />
                <TextView
                    android:id="@+id/name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"

                    android:text="医学小知识"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="23sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            app:layout_widthPercent="48%"
            android:layout_width="0dp"
            android:id="@+id/shoucang"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/yisc"
                    android:layout_height="60dp"

                    />
                <TextView
                    android:id="@+id/name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"

                    android:text="收藏"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="23sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.percent.PercentRelativeLayout>


    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/richeng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"

            app:layout_widthPercent="48%"

            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="130dp">
                <ImageView

                    android:layout_width="70dp"
                    android:background="@drawable/shibie2"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"

                    />
                <TextView
                    android:id="@+id/name_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"

                    android:text="聊天"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="23sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            app:layout_widthPercent="48%"
            android:layout_width="0dp"
            android:id="@+id/daiban"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:layout_width="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/yijianyi"
                    android:layout_height="60dp"

                    />
                <TextView
                    android:id="@+id/name_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"

                    android:text="待办"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="23sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.percent.PercentRelativeLayout>



</LinearLayout>