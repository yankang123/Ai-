<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/beijign9"
android:orientation="vertical"
    >

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/card_denglu_touxiang"
    android:layout_width="160dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    android:src="@drawable/tou1"
    android:layout_gravity="center"
    android:layout_height="160dp">

</de.hdodenhof.circleimageview.CircleImageView>
<EditText
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/zhanghao"
    android:background="@drawable/shape_denglu"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:textColor="#ffffff"
    android:textSize="35sp"

    android:gravity="center"
    android:textColorHint="#ffffff"
    android:hint="账号"
    />
<EditText
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:id="@+id/password"
    android:background="@drawable/shape_denglu"
    android:layout_width="match_parent"
    android:hint="密码"
    android:textColor="#ffffff"
    android:textSize="35sp"
    android:textColorHint="#ffffff"
    android:layout_height="100dp" />
<RelativeLayout
    android:orientation="horizontal"
    android:layout_marginTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_marginLeft="15dp"
        android:id="@+id/zhuce"
        android:background="@drawable/shape_test"
        android:text="注册"
        android:color="#00BFFF"
        android:layout_alignParentLeft="true"
        android:textSize="25sp"
        android:textColor="#ffffff"

        android:layout_height="80dp"
        android:layout_width="140dp"/>
    <Button
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:id="@+id/denglu"

        android:text="登录"
        android:textSize="25sp"
        android:color="#00BFFF"
        android:textColor="#ffffff"
        android:background="@drawable/shape_test"
        android:layout_height="80dp"
        android:layout_width="140dp" />
</RelativeLayout>
</LinearLayout>